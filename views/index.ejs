<!DOCTYPE html>
<html>
<head>
    <title>Diary App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">CRUD App</a>
        </div>
      </nav>
      
    
    <div class="container my-5">
        <h1 class="text-center mb-4">My Diary</h1>
        <div class="text-end mb-3">
            <a href="/create" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Entry</a>
        </div>
        <ul class="list-group">
            <% entries.forEach(function(entry) { %>
                <li class="list-group-item">
                    <h5 class="mb-1"><%= entry.title %></h5>
                    <p><%= entry.content %></p>
                    <div class="d-flex justify-content-end">
                        <a href="/edit/<%= entry._id %>" class="btn btn-warning btn-sm me-2"><i class="fas fa-edit"></i> Edit</a>
                        <form action="/delete/<%= entry._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
  
</body>
</html>
